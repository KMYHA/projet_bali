<%- include('header') -%>
        <section class="comment_page">
<!--                     <div class="comment_img">   -->
<!--  <img src="/image/mer.jpg" alt="photo de la mer">-->
<!--</div>-->
            
        <h2>COMMENTAIRES</h2>
            <div class="comment_intro">
                <p>N'hésite pas à nous laisser un commentaire, une expérience ou autre sur les différents itinéraires ou sur ton propre itinéraire à Bali !</p>
                <p>Cela permettra aux autres voyageurs d'avoir d'autres retours !</p>
            </div>

        
        <section>
            <form method="post" class="comment_form">
                <div class="form-group">
                   <p>Bienvenue </p>
                   <p><%=locals.pseudo%></p>
                </div>
                <div class="form-group">
                    <label for="message">Ton commentaire :</label>
                    <textarea id="message" name="message" rows="5" cols="33" minlength="10" placeholder="Ecris ici ton commentaire" required="required"></textarea>
                </div>
                <div class="form-group">
                    <a id="comment_login" href="/login">Tu dois te connecter pour pouvoir ajouter un commentaire</a>
                    <button class="comment_btn" type="submit">Envoyer</button>
                </div>
            </form>
        </section>
        <section class="comments">
         <% for (commentaire of commentaires) { %>
      <ul>
        <li>
            <p>
                <b>
            <%= commentaire.pseudo %> : 
                </b>
            </p>
          <p>
            <%= commentaire.dateFormatee %>
            </p>
            <p>
            <%= commentaire.message %>
            </p>
        </li>
      </ul>
    <% } %>
        </section>
        </section>
    </main>
<%- include('footer') -%>
